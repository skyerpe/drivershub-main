{
    "extends": "@tsconfig/node18-strictest",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "incremental": true,
        "ignoreDeprecations": "5.0",
        "allowJs": false,
        "checkJs": false,
        "noEmit": true,
        "isolatedModules": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}